{
  "manifest_version": 3,
  "name": "Trackly - Smart Shopping Assistant",
  "version": "1.0.0",
  "description": "Make smarter purchase decisions with AI-powered price history, inventory insights, and recommendations",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://api.keepa.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*"
      ],
      "js": [
        "supabase-cdn.js",
        "supabase-client.js",
        "analytics.js",
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "app.html",
        "app.js",
        "app.css",
        "analytics.html",
        "analytics-dashboard.js",
        "analytics.css"
      ],
      "matches": [
        "https://*.amazon.com/*"
      ]
    }
  ]
}