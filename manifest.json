{
  "manifest_version": 3,
  "name": "Dottie - Smart Shopping Assistant",
  "version": "1.1.0",
  "description": "Make smarter purchase decisions with AI-powered price history, inventory insights, and recommendations",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://evpxv92u1l.execute-api.us-east-2.amazonaws.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/dotti-icon-16.png",
      "48": "icons/dotti-icon-48.png",
      "128": "icons/dotti-icon-128.png"
    }
  },
  "icons": {
    "16": "icons/dotti-icon-16.png",
    "48": "icons/dotti-icon-48.png",
    "128": "icons/dotti-icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/chart.js",
        "app.html",
        "signin.html",
        "app.js",
        "signin.js",
        "popup.js",
        "chart.umd.js",
        "app.css"
      ],
      "matches": [
        "https://*.amazon.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}